def peopleAwareOfSecret(n: int, delay: int, forget: int) -> int:
    MOD = 10**9 + 7
    dp = [0] * (n + 1)
    dp[1] = 1

    shareable = 0  # number of people who can share on current day

    for d in range(2, n + 1):
        # cohorts that start/stop sharing today
        if d - delay >= 1:
            shareable = (shareable + dp[d - delay]) % MOD
        if d - forget >= 1:
            shareable = (shareable - dp[d - forget]) % MOD
        dp[d] = shareable % MOD

    # sum of those who still remember at day n
    start = max(1, n - forget + 1)
    return sum(dp[start:n+1]) % MOD
