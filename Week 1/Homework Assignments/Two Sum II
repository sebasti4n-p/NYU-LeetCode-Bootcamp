class Solution(object):
    def twoSum(self, numbers, target):
        l = 0 # pointer 1
        r = len(numbers)-1 # pointer 2
        while l < r:
            s = numbers[l] + numbers[r]
            if s == target:
                return [l+1, r+1]
            if s < target:
                l += 1 #need a larger sum
            else:
                r -= 1 # need a smaller sum
