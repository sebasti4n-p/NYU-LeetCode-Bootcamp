class Solution(object):
    def productExceptSelf(self, nums):
        
        # Creating answer list n length
        answer = []
        for i in range(0,len(nums)):
            answer.append(1)
        
        product = 1  
        # insert the running product of nums into answer 
        for i in range(1, len(nums)):
            product *= nums[i-1] 
            answer[i] = product
        #multiplying prefix by the suffix and adding it to the answer list
        suffix = 1
        for i in range(len(nums)-1, -1, -1):
            answer[i] = answer[i] * suffix
            suffix *= nums[i]
        return answer
