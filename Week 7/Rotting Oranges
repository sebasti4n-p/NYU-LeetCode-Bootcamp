from collections import deque

class Solution(object):
    def orangesRotting(self, grid):
        if not grid or not grid[0]:
            return 0

        rows, cols = len(grid), len(grid[0])
        q = deque()
        fresh = 0

        # 1) Initialize queue with all rotten oranges and count fresh
        for r in range(rows):
            for c in range(cols):
                if grid[r][c] == 2:
                    q.append((r, c))
                elif grid[r][c] == 1:
                    fresh += 1

        # If no fresh oranges at all, answer is 0
        if fresh == 0:
            return 0

        minutes = 0
        directions = [(1,0), (-1,0), (0,1), (0,-1)]

        # 2) BFS level-by-level
        while q:
            # Process one "minute" worth of rotting
            level_size = len(q)
            rotted_this_minute = False

            for _ in range(level_size):
                r, c = q.popleft()

                for dr, dc in directions:
                    nr, nc = r + dr, c + dc

                    # If in bounds and is a fresh orange, rot it
                    if 0 <= nr < rows and 0 <= nc < cols and grid[nr][nc] == 1:
                        grid[nr][nc] = 2
                        fresh -= 1
                        q.append((nr, nc))
                        rotted_this_minute = True

            # Only increment minutes if at least one orange rotted in this layer
            if rotted_this_minute:
                minutes += 1

        # 3) If there are still fresh oranges, then impossible
        return -1 if fresh > 0 else minutes
